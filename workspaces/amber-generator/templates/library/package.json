{
  "name": "@amber-engine/{{name}}",
  "version": "1.0.0",
  "description": "{{description}}",
  "author": "Amber Engine",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "clean": "nwb clean-module",
    "build": "nwb build-react-component --copy-files",
    "test": "ava"
  },
  "peerDependencies": {
    "react": "15.x"
  },
  "dependencies": {},
  "devDependencies": {
    "nwb": "^0.19.1",
    "ava": "^0.22.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmberEngine/amber-lib-js.git"
  },
  "bugs": {
    "url": "https://github.com/AmberEngine/amber-lib-js/issues"
  },
  "homepage": "https://github.com/AmberEngine/amber-lib-js#readme",
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "source": [
      "src/**/*.{js,jsx}",
      "!node_modules/**/*"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": false,
    "verbose": true,
    "powerAssert": false,
    "require": [
      "babel-register",
      "ignore-styles",
      "../../config/testHelpers.js"
    ],
    "babel": {
      "presets": ["env", "react", "stage-0"]
    }
  }
}
