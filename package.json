{
  "name": "amber-lib-js",
  "version": "1.0.0",
  "private": true,
  "description": "A wonderful place for all of our shareable components!",
  "main": "build/index.js",
  "scripts": {
    "start":
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmberEngine/amber-lib-js.git"
  },
  "author": "Amber Engine",
  "bugs": {
    "url": "https://github.com/AmberEngine/amber-lib-js/issues"
  },
  "homepage": "https://github.com/AmberEngine/amber-lib-js#readme",
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "source": [
      "src/**/*.{js,jsx}",
      "!node_modules/**/*"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": false,
    "verbose": true,
    "powerAssert": false,
    "require": [
      "babel-register",
      "ignore-styles",
      "./config/testHelpers.js"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.12",
    "@storybook/addon-links": "^3.2.12",
    "@storybook/react": "^3.2.12"
  }
}
